<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/app_color_blue"
    android:padding="10dp">

     <com.qmuiteam.qmui.widget.QMUITopBar
         xmlns:android="http://schemas.android.com/apk/res/android"
         xmlns:app="http://schemas.android.com/apk/res-auto"
         android:id="@+id/mtopbar"
         android:layout_width="match_parent"
         android:layout_height="?attr/qmui_topbar_height"
         app:qmui_layout_collapseMode="pin"
         app:qmui_topbar_title_color="#FFFF"
         app:qmui_topbar_bg_color="@color/app_color_blue"
         app:qmui_topbar_need_separator="false"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_marginTop="?attr/qmui_topbar_height"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:background="#F1EFEF"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout

        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left">
                <TextView
                    android:textColor="@color/app_color_blue"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="网友评分："/>
                <TextView
                    android:id="@+id/txt_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/qmui_config_color_red"
                    android:text="6"/>
            </LinearLayout>

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginTop="10dp">
            <TextView
                android:textStyle="bold"
                android:textColor="@color/app_color_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评分人数："/>
            <TextView
                android:id="@+id/txt_grade_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/qmui_config_color_red"
                android:text="80"/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginTop="10dp">
                <TextView
                    android:textColor="@color/app_color_blue"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="星级数："/>
                <RatingBar
                    style="?android:attr/ratingBarStyleSmall"
                    android:rating="4"
                    android:layout_marginTop="3dp"
                    android:gravity="left"
                    android:numStars="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/us_head"
            android:layout_marginRight="10dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/avatar"/>
    </LinearLayout>
     <com.qmuiteam.qmui.layout.QMUIFrameLayout
         xmlns:android="http://schemas.android.com/apk/res/android"
         android:clickable="true"
         android:focusable="true"
         android:elevation="8dp"
         android:layout_marginTop="10dp"
         android:foreground="?android:attr/selectableItemBackground"
         android:background="#FFFFFF"
         android:id="@+id/qmui_layout"
         android:orientation="vertical"
         android:layout_marginLeft="8dp"
         android:layout_marginRight="8dp"
         android:padding="4dp"
         android:layout_marginBottom="4dp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
    <TextView
        android:layout_margin="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="这个看脸的世界怎么能少了打分环节呢？\n满分10分，可以看自己的得分还能点击其他用户头像可以对他们打分噢~" />
     </com.qmuiteam.qmui.layout.QMUIFrameLayout>
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#c23131"
            android:textSize="15dp"
            android:text="其他用户："/>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <!--<Button-->
            <!---->
            <!--android:layout_width="80dp"-->
            <!--android:layout_height="30dp"-->
            <!--android:background="@color/white"-->
            <!--android:textColor="@color/main_theme_color"-->
            <!--android:text="换一批"/>-->
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/user_grade_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
           android:layout_marginRight="4dp"
            android:src="@drawable/nv1"/>

        <ImageView
            android:id="@+id/user_grade_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/avatar"/>

        <ImageView
            android:layout_marginLeft="4dp"
            android:id="@+id/user_grade_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/avatar"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/user_grade_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="4dp"
            android:src="@drawable/nv1"/>

        <ImageView
            android:id="@+id/user_grade_fire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/avatar"/>

        <ImageView
            android:layout_marginLeft="4dp"
            android:id="@+id/user_grade_six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/avatar"/>

    </LinearLayout>
    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:layout_alignParentRight="true"
        android:layout_gravity="center_horizontal"
        android:foreground="?android:attr/selectableItemBackground"
        app:qmui_backgroundColor="@color/app_color_blue"
        app:qmui_radiusBottomLeft="5dp"
        app:qmui_radiusBottomRight="5dp"
        app:qmui_radiusTopLeft="5dp"
        app:qmui_radiusTopRight="5dp"
        android:layout_marginBottom="20dp"
        app:qmui_borderWidth="0dp"
        android:text="换一批"
        android:id="@+id/btn_refresh"
        android:textColor="@color/white"
        android:layout_width="80dp"
        android:layout_height="40dp" />
 </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</FrameLayout>
