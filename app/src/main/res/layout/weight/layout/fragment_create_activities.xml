<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#289DFA"
    tools:context=".ui.fragment.dianjingbao.CreateActivitiesFragment">

    <com.qmuiteam.qmui.widget.QMUITopBar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/mtopbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/qmui_topbar_height"
        app:qmui_layout_collapseMode="pin"
        app:qmui_topbar_title_color="#FFFF"
        app:qmui_topbar_bg_color="@color/qmui_config_color_transparent"
        app:qmui_topbar_need_separator="false"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="?attr/qmui_topbar_height"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imageview"
        android:src="@drawable/oto"
        android:layout_width="match_parent"
        android:layout_height="200dp" />
        <android.support.design.widget.TextInputLayout
            android:textColorHint="#31DDDD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:colorControlNormal="@color/white"
            android:layout_marginBottom="8dp">
        <EditText
            app:colorControlNormal="@color/white"
            android:maxLines="1"
            android:maxLength="11"
            android:textStyle="bold"
            android:textColor="#000000"
            android:id="@+id/input_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="标题:" />
        </android.support.design.widget.TextInputLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:textSize="16sp"
                android:text="活动时间："
                android:textColor="@color/hin"
                android:layout_marginLeft="5dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="16sp"
                android:text="请选择"
                android:textColor="#9B9A9A"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_marginRight="10dp"
                android:id="@+id/time"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <android.support.design.widget.TextInputLayout
            android:textColorHint="#31DDDD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:colorControlNormal="@color/white"
            android:layout_marginBottom="8dp">
            <EditText
                app:colorControlNormal="@color/white"
                android:maxLines="1"
                android:maxLength="11"
                android:textStyle="bold"
                android:textColor="#000000"
                android:id="@+id/input_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="地址:" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout

            android:textColorHint="#31DDDD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:colorControlNormal="@color/white"
            android:layout_marginBottom="8dp">
            <EditText
                app:colorControlNormal="@color/white"
                android:maxLines="1"
                android:maxLength="11"
                android:textStyle="bold"
                android:textColor="#000000"
                android:id="@+id/input_numberr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="人数:" />
        </android.support.design.widget.TextInputLayout>
        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            app:qmui_backgroundColor="#25B2EB"
            app:qmui_radiusBottomLeft="5dp"
            app:qmui_radiusBottomRight="5dp"
            app:qmui_radiusTopLeft="5dp"
            app:qmui_radiusTopRight="5dp"
            android:layout_marginTop="15dp"
            app:qmui_borderWidth="0dp"
            android:text="发布"
            android:textColor="#FFFFFF"
            android:id="@+id/signout"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </LinearLayout>
</FrameLayout>