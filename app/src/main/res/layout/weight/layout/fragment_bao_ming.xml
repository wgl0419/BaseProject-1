<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.fragment.dianjingbao.BaoMingFragment">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp">
<RelativeLayout
    android:layout_weight="1"
    android:layout_width="100dp"
    android:layout_height="wrap_content">
        <TextView
            android:textColor="#9B9696"
            android:layout_centerInParent="true"
            android:text="项目"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
</RelativeLayout>
        <View
            android:layout_width="1dp"
            android:layout_marginTop="12dp"
            android:background="#999595"
            android:layout_height="20dp"/>
        <com.example.baseproject.utils.weight.spinner.NiceSpinner
            android:layout_weight="3"
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/wangzhe"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginLeft="12dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <ImageView
        android:src="@mipmap/club"
        android:layout_width="match_parent"
        android:layout_height="140dp" />
        <TextView
            android:layout_marginLeft="8dp"
            android:textColor="#C5C5C5"
            android:layout_marginTop="3dp"
            android:textSize="10sp"
            android:text="活动时间：2019年3月25日"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="8dp"
            android:textColor="#C5C5C5"
            android:layout_marginTop="3dp"
            android:textSize="10sp"
            android:text="地点：深圳福田区依迪综合市场"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="12dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@mipmap/clubone"
                android:layout_width="match_parent"
                android:layout_height="140dp" />
            <TextView
                android:layout_marginLeft="8dp"
                android:textColor="#C5C5C5"
                android:layout_marginTop="3dp"
                android:textSize="10sp"
                android:text="活动时间：2019年3月26日"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="8dp"
                android:textColor="#C5C5C5"
                android:layout_marginTop="3dp"
                android:textSize="10sp"
                android:text="地点：深圳市罗湖区人民南路中旅大厦3楼"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="30dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginLeft="12dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@mipmap/clubtwo"
                android:layout_width="match_parent"
                android:layout_height="140dp" />
            <TextView
                android:layout_marginLeft="8dp"
                android:textColor="#C5C5C5"
                android:layout_marginTop="3dp"
                android:textSize="10sp"
                android:text="活动时间：2019年3月25日"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="8dp"
                android:textColor="#C5C5C5"
                android:layout_marginTop="3dp"
                android:textSize="10sp"
                android:text="地点：南山区粤海街道学府路厚德品园商场"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="12dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@mipmap/clubthree"
                android:layout_width="match_parent"
                android:layout_height="140dp" />
            <TextView
                android:layout_marginLeft="8dp"
                android:textColor="#C5C5C5"
                android:layout_marginTop="3dp"
                android:textSize="10sp"
                android:text="活动时间：2019年3月28日"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="8dp"
                android:textColor="#C5C5C5"
                android:layout_marginTop="3dp"
                android:textSize="10sp"
                android:text="地点：深圳市南山区南头街道桃园路"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>