<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/app_color_blue"
    android:padding="10dp">
    <com.qmuiteam.qmui.widget.QMUITopBar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/mtopbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/qmui_topbar_height"
        app:qmui_layout_collapseMode="pin"
        app:qmui_topbar_title_color="#FFFF"
        app:qmui_topbar_bg_color="@color/app_color_blue"
        app:qmui_topbar_need_separator="false"/>
    <LinearLayout
        android:gravity="center"
        android:background="@color/white"
        android:layout_marginTop="?attr/qmui_topbar_height"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/user_head"
        android:layout_width="200dp"
        android:layout_height="200dp" />

    <TextView
        android:id="@+id/grade_num"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="@color/qmui_config_color_red"
        android:text="6"/>

    <SeekBar
        android:id="@+id/seekbar"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:progress="0"
        android:max="10"/>


        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/falsee"
                android:layout_marginLeft="25dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/falsee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_centerInParent="true"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="打分"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/truee"
                android:layout_marginRight="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/truee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:visibility="gone"
        android:foreground="?android:attr/selectableItemBackground"
        app:qmui_backgroundColor="@color/app_color_blue"
        app:qmui_radiusBottomLeft="5dp"
        app:qmui_radiusBottomRight="5dp"
        app:qmui_radiusTopLeft="5dp"
        app:qmui_radiusTopRight="5dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        app:qmui_borderWidth="0dp"
        android:text="确定"
        android:id="@+id/btn_sure"
        android:textColor="@color/white"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_width="100dp"
        android:layout_height="40dp" />

    <!--<Button-->
     <!---->
        <!--android:layout_marginTop="50dp"-->
        <!--android:layout_width="80dp"-->
        <!--android:layout_height="30dp"-->
        <!---->
        <!--android:background="@color/white"-->
        <!--android:textColor="@color/main_theme_color"/>-->
    </LinearLayout>
</FrameLayout>
